# Variables de Entorno - Sistema Cyberhole Condominios
# Copiar este archivo como .env y configurar según el entorno

# Configuración de la aplicación
APP_NAME="Cyberhole Condominios"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Configuración de base de datos
DB_HOST=localhost
DB_PORT=3306
DB_NAME=u837350477_Cuestionario
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Configuración JWT
JWT_SECRET=default_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_ISSUER=cyberhole-condominios
JWT_AUDIENCE=cyberhole-users
JWT_ACCESS_EXPIRE=3600
JWT_REFRESH_EXPIRE=86400
JWT_RESET_EXPIRE=1800
JWT_LEEWAY=60
JWT_JTI_ENABLED=true
JWT_VALIDATE_TIMESTAMPS=true
JWT_AUTO_REFRESH=true
JWT_REFRESH_THRESHOLD=900

# Configuración de seguridad
CSRF_ENABLED=true
CSRF_TOKEN_NAME=_token
CSRF_EXPIRE=1800
CSRF_REGENERATE=true
CSRF_VALIDATE_REFERRER=true

# Políticas de contraseñas
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_MAX_ATTEMPTS=5
PASSWORD_LOCKOUT_TIME=900
PASSWORD_HISTORY_LIMIT=5

# Configuración de sesiones
SESSION_NAME=CYBERHOLE_SESSION
SESSION_LIFETIME=7200
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax
SESSION_REGENERATE_INTERVAL=300
SESSION_GC_PROBABILITY=1
SESSION_GC_DIVISOR=100

# Configuración de cookies
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=Lax
COOKIE_DEFAULT_EXPIRE=86400
COOKIE_PATH=/
COOKIE_DOMAIN=

# Headers de seguridad
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION="1; mode=block"
REFERRER_POLICY=strict-origin-when-cross-origin
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
HSTS_HEADER="max-age=31536000; includeSubDomains"
PERMISSIONS_POLICY="geolocation=(), microphone=(), camera=()"

# Rate limiting
RATE_LIMITING_ENABLED=true
LOGIN_MAX_ATTEMPTS=5
LOGIN_WINDOW=900
API_MAX_REQUESTS=100
API_WINDOW=3600
RATE_LIMIT_LOCKOUT=1800

# Configuración de encriptación
ENCRYPTION_ALGORITHM=AES-256-CBC
ENCRYPTION_KEY=
HASH_ALGORITHM=sha256

# Configuración de archivos subidos
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_EXT="jpg,jpeg,png,gif,pdf,doc,docx"
UPLOAD_FORBIDDEN_EXT="php,js,html,exe,bat,sh"
UPLOAD_SCAN_MALWARE=true
UPLOAD_QUARANTINE_PATH=/tmp/quarantine

# Logging de seguridad
SECURITY_LOGGING_ENABLED=true
LOG_FAILED_LOGINS=true
LOG_SUCCESSFUL_LOGINS=true
LOG_PASSWORD_CHANGES=true
LOG_PRIVILEGE_ESCALATION=true
SECURITY_LOG_FILE=security.log
SECURITY_LOG_RETENTION=90

# Configuración de IP
IP_WHITELIST_ENABLED=false
IP_WHITELIST=
IP_BLACKLIST_ENABLED=true
IP_BLACKLIST=
GEO_BLOCKING_ENABLED=false
ALLOWED_COUNTRIES=MX

# Configuración de PHP
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=30

# Zona horaria
TIMEZONE=America/Mexico_City
